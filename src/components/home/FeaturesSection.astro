---
import Section from "../../layouts/Section.astro";
import Paragraph from "../ui/Paragraph.astro";
import SubHeading from "../ui/SubHeading.astro";
---

<Section>
  <div
    class="flex flex-col justify-center gap-[5rem] w-full px-[5rem] pt-[5rem] pb-[8rem]"
  >
    <div class="flex items-center justify-between w-full">
      <div class="flex flex-col gap-[1.5rem]">
        <SubHeading text="Instant invoice creation" />
        <Paragraph
          text="Send necessary invoices to your customers directly to their emails with needed information for payments."
          maxWidth="35rem"
        />

        <div
          class="p-[0.625rem]
          text-[#A2A2A2]
          text-[0.875rem]
          flex items-center justify-center border-[1px] rounded-[8px] w-max border-[#A2A2A2]"
        >
          Fast and direct emailing
        </div>

        <div
          class="p-[0.625rem]
        text-[#A2A2A2]
        text-[0.875rem]
        flex items-center justify-center border-[1px] rounded-[8px] w-max border-[#A2A2A2]"
        >
          Template-able payment information
        </div>
      </div>

      <div class="w-[37rem] h-[39rem] relative">
        <img
          src="/images/featuresImage1.png"
          alt={""}
          class="h-full w-full object-contain object-right"
        />
      </div>
    </div>

    <div class="flex items-center justify-between w-full">
      <div class="flex flex-col gap-[1.5rem]">
        <SubHeading text="Built to look, feel and be easy!" />
        <Paragraph
          text="The simplest of looks with all the details necessary for daily business running, no cluttering no stress!"
          maxWidth="35rem"
        />

        <div
          class="p-[0.625rem]
            text-[#A2A2A2]
            text-[0.875rem]
            flex items-center justify-center border-[1px] rounded-[8px] w-max border-[#A2A2A2]"
        >
          Accessible data
        </div>

        <div
          class="p-[0.625rem]
          text-[#A2A2A2]
          text-[0.875rem]
          flex items-center justify-center border-[1px] rounded-[8px] w-max border-[#A2A2A2]"
        >
          Set your own services, prices and payment methods
        </div>

        <div
          class="p-[0.625rem]
          text-[#A2A2A2]
          text-[0.875rem]
          flex items-center justify-center border-[1px] rounded-[8px] w-max border-[#A2A2A2]"
        >
          Easy and fast payment methods
        </div>
      </div>

      <div class="w-[37rem] h-[39rem] relative">
        <img
          src="/images/featuresImage2.png"
          alt={""}
          class="h-full w-full object-contain object-right"
        />
      </div>
    </div>
  </div>
</Section>
